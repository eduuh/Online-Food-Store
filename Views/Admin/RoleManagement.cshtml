@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@model IEnumerable<IdentityRole>

<h2>Role Management</h2>

@if (!Model.Any())
{
	<tr><td colspan="3" class="text-center">No roles defined yet.Please create the first one</td></tr>
}
else
{
	<table class="table table-condensed table-bordered">
		<tr>
			<th>Role Id</th>
			<th>Role Name</th>
		</tr>
		@foreach (var role in Model)
		{
			<tr>
				<td>@role.Id</td>
				<td>@role.Name</td>
			</tr>

			<form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
				<a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-id="@role.Id"> Edit Role</a>
				<button type="submit" class="btn btb-sm btn-danger" onclick="return confirm('Do you want to  Delete')" asp-route-id="@role.Id">
					Delete
				</button>
			</form>
		}
	</table>
}
<a class="btn btn-sm btn-primary" asp-action="AddNewRole" >Add new role</a>
