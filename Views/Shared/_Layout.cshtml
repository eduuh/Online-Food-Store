
@using Microsoft.AspNetCore.Identity;
<!DOCTYPE html>
@inject SignInManager<IdentityUser> SignInManager
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/content/site.css" />
</head>
<body>

	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li><a asp-controller="Home" asp-action="Index" class="navbar-brand">Edwin Pie Shop</a> </li>
					<li><a asp-controller="Feedback" asp-action="Index">Feedback</a></li>
					<li><a asp-controller="Admin" asp-action="Usermanagement">User Management</a></li>
				</ul>
			</div>

				@if (SignInManager.IsSignedIn(User))
				{
					<form asp-action="Logout" asp-controller="Account" id="logoutform"
						  method="post" class="navbar-right">
						<ul class="nav navbar-right">
							<li><a href="javascript:document.getElementById('logoutform').submit()">Log out @User.Identity.Name)</a></li>
						</ul>
					</form>
				}
				else
				{

                   <div class="navbar-collapse collapse">
					<ul class="nav navbar-right">
						
						<li><a asp-controller="Account" asp-action="Signup">Register</a></li>
						<li><a asp-controller="Account" asp-action="Login">Log in</a></li>
					</ul>
				</div>
				}
		</div>
	</nav>


	<div class="container body-content">
		<div class="row">
			@RenderBody()
		</div>
	</div>
</body>
</html>


